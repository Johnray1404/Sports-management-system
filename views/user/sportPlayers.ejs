<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= team.teamName %> - <%= sport %> Players</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        :root {
            --primary-color: #4A154B;
            --primary-light: #6a1b6a;
            --secondary-color: #9C4D9A;
            --light-gray: #f8f9fa;
            --medium-gray: #e9ecef;
            --dark-gray: #495057;
            --white: #ffffff;
            --box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
            --border-radius: 10px;
            --transition: all 0.3s ease;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background-color: var(--light-gray);
            color: var(--dark-gray);
            line-height: 1.6;
        }

        .players-container {
            max-width: 1100px;
            margin: 2rem auto;
            background: var(--white);
            border-radius: var(--border-radius);
            box-shadow: var(--box-shadow);
            overflow: hidden;
            padding: 2.5rem;
        }

        .players-header {
            display: flex;
            align-items: center;
            margin-bottom: 2rem;
            padding-bottom: 1.5rem;
            border-bottom: 1px solid var(--medium-gray);
        }

        .team-logo {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            background: var(--medium-gray);
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 1.5rem;
            overflow: hidden;
            flex-shrink: 0;
        }

        .team-logo img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .team-logo i {
            font-size: 2rem;
            color: var(--primary-color);
        }

        .header-info h1 {
            color: var(--primary-color);
            margin-bottom: 0.5rem;
            font-size: 1.8rem;
        }

        .header-info .sport-title {
            display: inline-block;
            background-color: var(--primary-color);
            color: white;
            padding: 0.3rem 1rem;
            border-radius: 20px;
            font-size: 0.9rem;
        }

        .players-list {
            margin-top: 2rem;
        }

        .section-title {
            font-size: 1.3rem;
            color: var(--primary-color);
            margin-bottom: 1.5rem;
            font-weight: 600;
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }

        .player-card {
            display: flex;
            align-items: center;
            padding: 1.25rem;
            margin-bottom: 1rem;
            background-color: var(--light-gray);
            border-radius: var(--border-radius);
            transition: var(--transition);
            cursor: pointer;
        }

        .player-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        }

        .player-avatar {
            width: 60px;
            height: 60px;
            border-radius: 50%;
            background-color: var(--medium-gray);
            margin-right: 1.5rem;
            overflow: hidden;
            display: flex;
            align-items: center;
            justify-content: center;
            flex-shrink: 0;
        }

        .player-avatar img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            border-radius: 50%;
        }

        .player-avatar i {
            color: var(--primary-color);
            font-size: 1.5rem;
        }

        .player-details {
            flex-grow: 1;
        }

        .player-details h3 {
            color: var(--primary-color);
            margin-bottom: 0.25rem;
        }

        .action-buttons {
            display: flex;
            justify-content: space-between;
            margin-top: 3rem;
            padding-top: 1.5rem;
            border-top: 1px solid var(--medium-gray);
        }

        .btn {
            padding: 0.8rem 1.5rem;
            border-radius: var(--border-radius);
            font-weight: 500;
            cursor: pointer;
            transition: var(--transition);
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            text-decoration: none;
            font-size: 0.95rem;
        }

        .btn-back {
            background-color: var(--medium-gray);
            color: var(--primary-color);
        }

        .btn-back:hover {
            background-color: #e0e0e0;
        }

        .btn-primary {
            background-color: var(--primary-color);
            color: white;
        }

        .btn-primary:hover {
            background-color: var(--primary-light);
        }

        /* Modal Styles */
        .modal {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            z-index: 1000;
            justify-content: center;
            align-items: center;
        }

        .modal-content {
            background-color: white;
            border-radius: var(--border-radius);
            width: 90%;
            max-width: 600px;
            max-height: 90vh;
            overflow-y: auto;
            padding: 2rem;
            box-shadow: var(--box-shadow);
            animation: modalFadeIn 0.3s ease;
        }

        @keyframes modalFadeIn {
            from { opacity: 0; transform: translateY(-20px); }
            to { opacity: 1; transform: translateY(0); }
        }

        .modal-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 1.5rem;
            padding-bottom: 1rem;
            border-bottom: 1px solid var(--medium-gray);
        }

        .modal-header h2 {
            color: var(--primary-color);
            margin: 0;
        }

        .close-modal {
            font-size: 1.5rem;
            cursor: pointer;
            color: var(--dark-gray);
            transition: var(--transition);
        }

        .close-modal:hover {
            color: var(--primary-color);
        }

        .modal-body {
            display: flex;
            flex-direction: column;
            gap: 1.5rem;
        }

        .modal-avatar {
            width: 120px;
            height: 120px;
            border-radius: 50%;
            background-color: var(--medium-gray);
            margin: 0 auto 1.5rem;
            overflow: hidden;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .modal-avatar img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .modal-avatar i {
            font-size: 3rem;
            color: var(--primary-color);
        }

        .player-info-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
            gap: 1rem;
        }

        .info-item {
            margin-bottom: 1rem;
        }

        .info-label {
            font-weight: 600;
            color: var(--primary-color);
            margin-bottom: 0.25rem;
            font-size: 0.9rem;
        }

        .info-value {
            color: var(--dark-gray);
        }

        @media (max-width: 768px) {
            .players-container {
                padding: 1.5rem;
            }

            .players-header {
                flex-direction: column;
                text-align: center;
            }

            .team-logo {
                margin-right: 0;
                margin-bottom: 1rem;
            }

            .player-card {
                flex-direction: column;
                text-align: center;
            }

            .player-avatar {
                margin-right: 0;
                margin-bottom: 1rem;
            }

            .player-info-grid {
                grid-template-columns: 1fr;
            }
        }

        .player-avatar img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            border-radius: 50%;
            box-sizing: border-box; /* Ensures border is included in dimensions */
        }

        .modal-avatar img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            border-radius: 50%;
            box-sizing: border-box; /* Ensures border is included in dimensions */
        }
    </style>
</head>
<body>
    <main class="dashboard-container">
        <div class="players-container">
            <div class="players-header">
                <div class="team-logo">
                    <% if (team.teamProfile) { %>
                        <img src="/uploads/team_profiles/<%= team.teamProfile %>" alt="<%= team.teamName %>">
                    <% } else { %>
                        <i class="fas fa-users"></i>
                    <% } %>
                </div>
                <div class="header-info">
                    <h1><%= team.teamName %></h1>
                    <span class="sport-title">
                        <i class="fas fa-running"></i> <%= sport %> Players
                    </span>
                </div>
            </div>

            <div class="players-list">
                <h2 class="section-title">
                    <i class="fas fa-users"></i> Player Roster
                </h2>

                <% if (players.length > 0) { %>
                    <% players.forEach(player => { %>
                        <div class="player-card" onclick="showPlayerModal(<%= JSON.stringify(player) %>, '<%= team.organization %>')">
                            <div class="player-avatar">
                                <% if (player.user_profile) { %>
                                    <img src="<%= player.user_profile %>" alt="<%= player.player_name %>" style="border: 2px solid <%= team.organization === 'school' ? '#4A154B' : '#9C4D9A' %>;">
                                <% } else { %>
                                    <i class="fas fa-user"></i>
                                <% } %>
                            </div>
                            <div class="player-details">
                                <h3><%= player.player_name %></h3>
                            </div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <div class="no-players">
                        <p>No players found for <%= sport %> in this team.</p>
                    </div>
                <% } %>
            </div>

            <div class="action-buttons">
                <a href="/teams/<%= team.id %>" class="btn btn-back">
                    <i class="fas fa-arrow-left"></i> Back
                </a>
                <a href="/all-teams" class="btn btn-primary">
                    <i class="fas fa-list"></i> All Teams
                </a>
            </div>
        </div>

        <!-- Player Modal -->
        <div class="modal" id="playerModal">
            <div class="modal-content">
                <div class="modal-header">
                    <h2 id="modalPlayerName"></h2>
                    <span class="close-modal" onclick="closeModal()">&times;</span>
                </div>
                <div class="modal-body">
                    <div class="modal-avatar">
                        <img id="modalPlayerAvatar" src="" alt="Player Avatar" style="border: 2px solid <%= team.organization === 'school' ? '#4A154B' : '#9C4D9A' %>;">
                        <i class="fas fa-user" id="modalPlayerIcon"></i>
                    </div>
                    <div class="player-info-grid" id="playerInfoGrid">
                        <!-- Dynamic content will be inserted here -->
                    </div>
                </div>
            </div>
        </div>
    </main>

    <script>
        // Show player modal with details
        function showPlayerModal(player, organization) {
            const modal = document.getElementById('playerModal');
            const modalPlayerName = document.getElementById('modalPlayerName');
            const modalPlayerAvatar = document.getElementById('modalPlayerAvatar');
            const modalPlayerIcon = document.getElementById('modalPlayerIcon');
            const playerInfoGrid = document.getElementById('playerInfoGrid');

            // Set player name
            modalPlayerName.textContent = player.player_name;

            // Set player avatar
            if (player.user_profile) {
                modalPlayerAvatar.src = `${player.user_profile}`;
                modalPlayerAvatar.style.display = 'block';
                modalPlayerIcon.style.display = 'none';
            } else {
                modalPlayerAvatar.style.display = 'none';
                modalPlayerIcon.style.display = 'block';
            }

            // Clear previous content
            playerInfoGrid.innerHTML = '';

            // Add player info based on organization
            const infoItems = [
                { label: 'Gender', value: player.sex || 'Not specified', icon: 'venus-mars' },
                { label: 'Age', value: player.age || 'N/A', icon: 'birthday-cake' },
                { label: 'Contact', value: player.contact_number || 'Not provided', icon: 'phone' }
            ];

            // Add organization-specific fields
            if (organization === 'school') {
                infoItems.push(
                    { label: 'School', value: player.school || 'Not specified', icon: 'school' },
                    { label: 'Year Level', value: player.year_level || 'Not specified', icon: 'graduation-cap' }
                );
            } else if (organization === 'barangay') {
                infoItems.push(
                    { label: 'Barangay', value: player.barangay || 'Not specified', icon: 'map-marker-alt' }
                );
            }

            // Add sports if available
            if (player.sports) {
                infoItems.push(
                    { label: 'Sports', value: player.sports, icon: 'running' }
                );
            }

            // Create and append info items
            infoItems.forEach(item => {
                const infoItem = document.createElement('div');
                infoItem.className = 'info-item';
                infoItem.innerHTML = `
                    <div class="info-label">
                        <i class="fas fa-${item.icon}"></i> ${item.label}
                    </div>
                    <div class="info-value">${item.value}</div>
                `;
                playerInfoGrid.appendChild(infoItem);
            });

            // Show modal
            modal.style.display = 'flex';
            document.body.style.overflow = 'hidden';
        }

        // Close modal
        function closeModal() {
            const modal = document.getElementById('playerModal');
            modal.style.display = 'none';
            document.body.style.overflow = 'auto';
        }

        // Close modal when clicking outside
        window.onclick = function(event) {
            const modal = document.getElementById('playerModal');
            if (event.target === modal) {
                closeModal();
            }
        }
    </script>
</body>
</html>