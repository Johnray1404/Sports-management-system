<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>User Profile</title>
    <link rel="stylesheet" href="/styles/userProfile.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #eef2f5;
            margin: 0;
            padding: 0;
        }

        .profile-container {
            width: 90%;
            max-width: 600px;
            margin: 50px auto;
            background: #ffffff;
            border-radius: 12px;
            padding: 40px 30px;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
            text-align: center;
            position: relative;
        }

        .back-button {
            position: absolute;
            top: 20px;
            left: 20px;
            background-color: #6c757d;
            color: #fff;
            border: none;
            border-radius: 5px;
            padding: 8px 14px;
            font-size: 14px;
            cursor: pointer;
            text-decoration: none;
            transition: background-color 0.3s ease;
        }

        .back-button i {
            margin-right: 5px;
        }

        .back-button:hover {
            background-color: #5a6268;
        }

        .profile-image {
            width: 160px;
            height: 160px;
            border-radius: 50%;
            object-fit: cover;
            border: 4px solid #007bff;
            margin-bottom: 20px;
        }

        .upload-form {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 10px;
            margin-bottom: 25px;
        }

        .upload-form input[type="file"] {
            border: 1px solid #ccc;
            padding: 8px 10px;
            border-radius: 6px;
            background-color: #f9f9f9;
        }

        .upload-form button {
            padding: 10px 20px;
            background-color: #007bff;
            border: none;
            color: #fff;
            border-radius: 6px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .upload-form button:hover {
            background-color: #0056b3;
        }

        .user-details {
            margin-top: 20px;
            text-align: left;
        }

        .user-details h3 {
            font-size: 18px;
            color: #444;
            margin-bottom: 10px;
            display: flex;
            align-items: center;
        }

        .user-details h3 i {
            margin-right: 10px;
            color: #007bff;
            width: 22px;
            text-align: center;
        }

        .divider {
            height: 1px;
            background-color: #ccc;
            margin: 15px 0;
        }

        @media (max-width: 500px) {
            .upload-form {
                flex-direction: column;
                gap: 15px;
            }

            .back-button {
                top: 10px;
                left: 10px;
                padding: 6px 12px;
                font-size: 13px;
            }
        }
        .alert-success {
            background-color: #d4edda;
            color: #155724;
            border: 1px solid #c3e6cb;
            padding: 12px 20px;
            border-radius: 6px;
            margin: 20px 0;
            font-size: 15px;
            display: inline-block;
            text-align: left;
            width: 100%;
            box-sizing: border-box;
        }
        .alert-success i {
            margin-right: 8px;
            color: #28a745;
        }

    </style>
</head>
<body>
    <div class="profile-container">
        <a href="/homepage" class="back-button"><i class="fas fa-arrow-left"></i> </a>

        <h1><i class="fas fa-user-circle"></i> Your Profile</h1>
            <% if (message) { %>
                <div class="alert-success" id="successMessage">
                    <i class="fas fa-check-circle"></i> <%= message %>
                </div>
            <% } %>
        <img src="<%= user.profile ? user.profile : '/images/default_profile.png' %>" class="profile-image" alt="Profile Picture">

        <form class="upload-form" action="/profile/upload" method="POST" enctype="multipart/form-data">
            <input type="file" name="profile" required>
            <button type="submit"><i class="fas fa-upload"></i> Upload</button>
        </form>

        <div class="user-details">
            <h3><i class="fas fa-id-card"></i> <%= player?.player_name || 'N/A' %></h3>
            <div class="divider"></div>
            <h3><i class="fas fa-venus-mars"></i> Sex: <%= player?.sex || 'N/A' %></h3>
            <div class="divider"></div>
            <h3><i class="fas fa-birthday-cake"></i> Birthdate: <%= player?.birthdate || 'N/A' %></h3>
            <div class="divider"></div>
            <h3><i class="fas fa-hourglass-half"></i> Age: <%= player?.age || 'N/A' %></h3>
        </div>
    </div>
</body>
<script>
    // Auto-hide success message after 1 second (1000ms)
    setTimeout(() => {
        const msg = document.getElementById('successMessage');
        if (msg) {
            msg.style.transition = 'opacity 0.5s ease';
            msg.style.opacity = '0';
            setTimeout(() => msg.remove(), 500); // remove from DOM after fade-out
        }
    }, 1000);
</script>
</html>
