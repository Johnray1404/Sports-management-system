<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/styles/coachHomepage.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        :root {
        /* Original color variables that the modal depends on */
        --primary-color: #2c7be5;
        --secondary-color: #6e84a3;
        --light-gray: #f8f9fa;
        --medium-gray: #e9ecef;
        --dark-gray: #495057;
        --white: #ffffff;
        --shadow: 0 4px 12px rgba(0, 0, 0, 0.08);
        
        --transition: all 0.3s ease;
        
        /* Your new player color scheme */
        --player-blue: #e1f0ff;
        --player-green: #e0f7fa;
        --player-purple: #f3e5f5;
        --player-orange: #ffecb3;
        --player-pink: #fce4ec;
        --player-teal: #e0f2f1;
        --player-amber: #fff8e1;
        --player-indigo: #e8eaf6;
        
        --accent-blue: #1a73e8;
        --accent-green: #0b8043;
        --accent-purple: #8e24aa;
        --accent-orange: #e65100;
        --accent-pink: #d81b60;
        --accent-teal: #00897b;
        --accent-amber: #ff8f00;
        --accent-indigo: #3949ab;
    }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: var(--light-gray);
            color: var(--dark-gray);
            line-height: 1.6;
        }

        .dashboard-container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 20px;
        }

        .back-link {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            margin: 0 0 20px;
            padding: 10px 16px;
            background-color: var(--primary-color);
            color: var(--white);
            border-radius: 10px;
            text-decoration: none;
            transition: var(--transition);
            font-weight: 500;
        }

        .back-link:hover {
            background-color: #1a68d1;
            transform: translateY(-2px);
        }

        .page-header {
            background-color: var(--white);
            border-radius: 10px;
            padding: 25px;
            margin-bottom: 30px;
            box-shadow: var(--shadow);
        }

        .page-header h1 {
            color: var(--primary-color);
            margin: 0 0 10px;
            font-size: 1.8rem;
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .sport-title {
            color: var(--primary-color);
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .team-name {
            display: flex;
            align-items: center;
            gap: 8px;
            color: var(--secondary-color);
            font-size: 1.1rem;
            margin-bottom: 15px;
        }

        .total-players {
            font-size: 1rem;
            color: var(--secondary-color);
            margin: 0;
        }
        .players-list {
            display: flex;
            flex-direction: column;
            gap: 10px;
            margin-bottom: 40px;
        }

        .player-item {
            background-color: var(--white);
            border-radius: var(--border-radius);
            box-shadow: var(--shadow);
            transition: var(--transition);
            cursor: pointer;
            display: flex;
            align-items: center;
            padding: 12px 20px;
            position: relative;
            overflow: hidden;
            border-left: 4px solid transparent;
            transition: all 0.3s ease;
        }

        .player-item:nth-child(8n+1) { 
            background-color: var(--player-blue);
            border-left-color: var(--accent-blue);
        }
        .player-item:nth-child(8n+2) { 
            background-color: var(--player-green);
            border-left-color: var(--accent-green);
        }
        .player-item:nth-child(8n+3) { 
            background-color: var(--player-purple);
            border-left-color: var(--accent-purple);
        }
        .player-item:nth-child(8n+4) { 
            background-color: var(--player-orange);
            border-left-color: var(--accent-orange);
        }
        .player-item:nth-child(8n+5) { 
            background-color: var(--player-pink);
            border-left-color: var(--accent-pink);
        }
        .player-item:nth-child(8n+6) { 
            background-color: var(--player-teal);
            border-left-color: var(--accent-teal);
        }
        .player-item:nth-child(8n+7) { 
            background-color: var(--player-amber);
            border-left-color: var(--accent-amber);
        }
        .player-item:nth-child(8n+8) { 
            background-color: var(--player-indigo);
            border-left-color: var(--accent-indigo);
        }

        .player-item:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.12);
        }

        .player-item:hover .player-avatar {
            transform: scale(1.05);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .player-avatar-container {
            width: 50px;
            height: 50px;
            margin-right: 15px;
            flex-shrink: 0;
        }

        .player-avatar {
            width: 100%;
            height: 100%;
            border-radius: 50%;
            object-fit: cover;
            border: 2px solid var(--primary-color);
            transition: all 0.3s ease;
        }

        .default-avatar {
            width: 100%;
            height: 100%;
            border-radius: 50%;
            background-color: var(--medium-gray);
            display: flex;
            align-items: center;
            justify-content: center;
            border: 2px solid var(--primary-color);
            color: var(--secondary-color);
            font-size: 20px;
        }

        .player-info {
            flex-grow: 1;
            min-width: 0;
        }

        .player-name {
            color: inherit; 
            font-weight: 600;
            margin: 0 0 3px;
            font-size: 1rem;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .no-players {
            background-color: var(--white);
            border-radius: var(--border-radius);
            padding: 40px;
            text-align: center;
            box-shadow: var(--shadow);
            width: 100%;
        }

        .no-players i {
            color: var(--secondary-color);
            margin-bottom: 15px;
        }

        .no-players h3 {
            color: var(--primary-color);
            margin-bottom: 10px;
        }

        .no-players p {
            color: var(--secondary-color);
            margin: 0;
        }

        /* Modal Styles (unchanged) */
        .modal {
            display: none;
            position: fixed;
            z-index: 1000;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            padding-top: 10px;
            background-color: rgba(0,0,0,0.5);
            backdrop-filter: blur(5px);
            animation: fadeIn 0.3s ease;
            overflow-y: auto;
            
        }

        @keyframes fadeIn {
            from { opacity: 0; }
            to { opacity: 1; }
        }

        .modal-content {
            background-color: var(--white);
            margin: 5% auto;
            max-height: 90vh;
            padding: 30px;
            overflow-y: auto;
            border-radius: 10px;
            width: 80%;
            max-width: 700px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.2);
            animation: slideIn 0.3s ease;
        }

        @keyframes slideIn {
            from { transform: translateY(-50px); opacity: 0; }
            to { transform: translateY(0); opacity: 1; }
        }

        .modal-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-bottom: 1px solid var(--medium-gray);
            padding-bottom: 15px;
            margin-bottom: 20px;
        }

        .modal-title {
            font-size: 1.5rem;
            color: var(--primary-color);
            margin: 0;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .close-modal {
            font-size: 1.8rem;
            cursor: pointer;
            color: var(--secondary-color);
            transition: var(--transition);
        }

        .close-modal:hover {
            color: var(--primary-color);
            transform: rotate(90deg);
        }

        .modal-body {
            display: grid;
            grid-template-columns: 1fr 2fr;
            gap: 30px;
        }

        .modal-profile {
            text-align: center;
        }

        .modal-profile-img {
            width: 160px;
            height: 160px;
            border-radius: 50%;
            object-fit: cover;
            border: 4px solid var(--primary-color);
            margin-bottom: 20px;
            box-shadow: var(--shadow);
        }

        .player-meta {
            display: flex;
            flex-direction: column;
            gap: 10px;
            margin-bottom: 20px;
        }

        .player-meta span {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
            color: var(--secondary-color);
        }

        .modal-details {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 20px;
        }

        .detail-item {
            margin-bottom: 15px;
        }

        .detail-label {
            font-weight: 600;
            color: var(--primary-color);
            display: flex;
            align-items: center;
            gap: 8px;
            margin-bottom: 5px;
        }

        .detail-value {
            color: var(--dark-gray);
            padding-left: 26px;
        }

        .documents-section {
            margin-top: 25px;
            padding-top: 20px;
            border-top: 1px solid var(--medium-gray);
            grid-column: 1 / -1;
        }

        .documents-section h3 {
            color: var(--primary-color);
            margin-bottom: 15px;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .document-links {
            display: flex;
            flex-wrap: wrap;
            gap: 15px;
        }

        .document-link {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            padding: 8px 15px;
            background-color: var(--light-gray);
            color: var(--primary-color);
            border-radius: 5px;
            text-decoration: none;
            transition: var(--transition);
            font-weight: 500;
            border: 1px solid var(--medium-gray);
        }

        .document-link:hover {
            background-color: var(--primary-color);
            color: var(--white);
            transform: translateY(-2px);
        }

        @media (max-width: 992px) {
            .modal-body {
                grid-template-columns: 1fr;
            }
            
            .modal-profile {
                margin-bottom: 20px;
            }
        }

        @media (max-width: 768px) {
            .modal-content {
                width: 90%;
                padding: 20px;
            }
            
            .modal-details {
                grid-template-columns: 1fr;
            }
        }

        @media (max-width: 576px) {
            .page-header {
                padding: 20px 15px;
            }
        }
        .default-profile-icon {
            width: 160px;
            height: 160px;
            border-radius: 50%;
            background-color: #e9ecef;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 20px;
            border: 4px solid var(--primary-color);
        }

        .default-profile-icon i {
            font-size: 60px;
            color: var(--secondary-color);
        }
    </style>
</head>
<body>

    <main class="dashboard-container">
        <a href="/coach/my-team" class="back-link">
            <i class="fas fa-arrow-left"></i> Back to Team
        </a>
        
        <div class="page-header">
            <h1>
                <i class="fas fa-users"></i> 
                <span class="sport-title"><%= sport %></span> Players
            </h1>
            <p class="team-name">
                <i class="fas fa-landmark"></i> <%= team.teamName %>
            </p>
            <p class="total-players">Total Players: <%= players.length %></p>
        </div>

        <% if (players.length > 0) { %>
            <div class="players-list">
                <% players.forEach(player => { %>
                    <div class="player-item" onclick="showPlayerModal(<%= JSON.stringify(player) %>)">
                        <div class="player-avatar-container">
                            <% if (player.profile_picture) { %>
                                <img src="<%= player.profile_picture %>" alt="<%= player.player_name %>" class="player-avatar">
                            <% } else { %>
                                <div class="default-avatar">
                                    <i class="fas fa-user"></i>
                                </div>
                            <% } %>
                        </div>
                        <div class="player-info">
                            <div class="player-name"><%= player.player_name %></div>
                            <div class="player-meta">
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        <% } else { %>
            <div class="no-players">
                <i class="fas fa-user-slash fa-3x"></i>
                <h3>No Players Found</h3>
                <p>There are no confirmed players registered for <strong><%= sport %></strong> in this team.</p>
            </div>
        <% } %>

        <!-- Player Modal (unchanged) -->
        <div id="playerModal" class="modal">
            <div class="modal-content">
                <div class="modal-header">
                    <h2 class="modal-title">
                        <i class="fas fa-user"></i>
                        <span id="modalPlayerName"></span>
                    </h2>
                    <span class="close-modal" onclick="closeModal()">&times;</span>
                </div>
                <div class="modal-body">
                    <div class="modal-profile">
                        <img id="modalPlayerImage" src="" class="modal-profile-img" style="display:none;">
                        <div id="defaultProfileIcon" class="default-profile-icon" style="display:none;">
                            <i class="fas fa-user"></i>
                        </div>
                        <div class="player-meta">
                            <span>
                                <i class="fas fa-birthday-cake"></i>
                                <span id="modalPlayerAge"></span> years-old
                            </span>
                            <span>
                                <i class="fas fa-venus-mars"></i>
                                <span id="modalPlayerSex"></span>
                            </span>
                        </div>
                    </div>
                    <div class="modal-details">
                        <% if (team.organization === 'school') { %>
                            <div class="detail-item">
                                <div class="detail-label">
                                    <i class="fas fa-graduation-cap"></i>
                                    School:
                                </div>
                                <div class="detail-value" id="modalPlayerSchool"></div>
                            </div>
                            <div class="detail-item">
                                <div class="detail-label">
                                    <i class="fas fa-layer-group"></i>
                                    Year Level:
                                </div>
                                <div class="detail-value" id="modalPlayerYearLevel"></div>
                            </div>
                        <% } else if (team.organization === 'barangay') { %>
                            <div class="detail-item">
                                <div class="detail-label">
                                    <i class="fas fa-map-marker-alt"></i>
                                    Barangay:
                                </div>
                                <div class="detail-value" id="modalPlayerBarangay"></div>
                            </div>
                        <% } %>
                        
                        <div class="detail-item">
                            <div class="detail-label">
                                <i class="fas fa-phone"></i>
                                Contact:
                            </div>
                            <div class="detail-value" id="modalPlayerContact"></div>
                        </div>
                        <div class="detail-item">
                            <div class="detail-label">
                                <i class="fas fa-calendar-day"></i>
                                Birthdate:
                            </div>
                            <div class="detail-value" id="modalPlayerBirthdate"></div>
                        </div>
                        <div class="detail-item">
                            <div class="detail-label">
                                <i class="fas fa-running"></i>
                                Sport:
                            </div>
                            <div class="detail-value" id="modalPlayerSport"></div>
                        </div>
                        <div class="detail-item">
                            <div class="detail-label">
                                <i class="fas fa-calendar"></i>
                                Joined Team Date:
                            </div>
                            <div class="detail-value" id="modalPlayerJoined"></div>
                        </div>
                    </div>
                </div>
                <div class="documents-section">
                    <h3><i class="fas fa-file-alt"></i> Documents</h3>
                    <div class="document-links" id="modalPlayerDocuments"></div>
                </div>
            </div>
        </div>
    </main>

    <script>
        function showPlayerModal(player) {
            // Format date
            const formatDate = (dateString) => {
                if (!dateString) return 'N/A';
                const date = new Date(dateString);
                return date.toLocaleDateString('en-US', {
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric'
                });
            };

            // Set modal content
            document.getElementById('modalPlayerName').textContent = player.player_name;
            
            // Handle profile picture or default icon
            const playerImage = document.getElementById('modalPlayerImage');
            const defaultIcon = document.getElementById('defaultProfileIcon');
            
            if (player.profile_picture) {
                playerImage.src = player.profile_picture;
                playerImage.style.display = 'block';
                defaultIcon.style.display = 'none';
            } else {
                playerImage.style.display = 'none';
                defaultIcon.style.display = 'flex'; // Show the default icon
            }
            
            document.getElementById('modalPlayerAge').textContent = player.age || 'N/A';
            document.getElementById('modalPlayerSex').textContent = player.sex || 'N/A';
            
            // Conditionally set school/year level or barangay
            const organizationType = '<%= team.organization %>';
            if (organizationType === 'school') {
                document.getElementById('modalPlayerSchool').textContent = player.school || 'N/A';
                document.getElementById('modalPlayerYearLevel').textContent = player.year_level || 'N/A';
            } else if (organizationType === 'barangay') {
                document.getElementById('modalPlayerBarangay').textContent = player.barangay || 'N/A';
            }
            
            document.getElementById('modalPlayerContact').textContent = player.contact_number || 'N/A';
            document.getElementById('modalPlayerBirthdate').textContent = formatDate(player.birthdate);
            document.getElementById('modalPlayerSport').textContent = player.sports || 'N/A';
            document.getElementById('modalPlayerJoined').textContent = formatDate(player.created_at);

            // Set documents
            const documentsDiv = document.getElementById('modalPlayerDocuments');
            documentsDiv.innerHTML = '';
            
            const documents = [
                { name: 'PSA', value: player.documents.PSA, icon: 'fa-id-card' },
                { name: 'Waiver', value: player.documents.waiver, icon: 'fa-file-signature' },
                { name: 'Medical Certificate', value: player.documents.med_cert, icon: 'fa-file-medical' }
            ];
            
            documents.forEach(doc => {
                if (doc.value) {
                    const link = document.createElement('a');
                    link.href = doc.value;
                    link.target = '_blank';
                    link.className = 'document-link';
                    link.innerHTML = `<i class="fas ${doc.icon}"></i> ${doc.name}`;
                    documentsDiv.appendChild(link);
                } else {
                    const span = document.createElement('span');
                    span.className = 'document-link';
                    span.innerHTML = `<i class="fas ${doc.icon}"></i> ${doc.name}: Not Provided`;
                    span.style.opacity = '0.7';
                    span.style.cursor = 'not-allowed';
                    documentsDiv.appendChild(span);
                }
            });

            // Show modal
            document.getElementById('playerModal').style.display = 'block';
            document.body.style.overflow = 'hidden';
        }

        function closeModal() {
            document.getElementById('playerModal').style.display = 'none';
            document.body.style.overflow = 'auto';
        }

        // Close modal when clicking outside
        window.onclick = function(event) {
            const modal = document.getElementById('playerModal');
            if (event.target === modal) {
                closeModal();
            }
        }

        // Close modal with ESC key
        document.addEventListener('keydown', function(event) {
            if (event.key === 'Escape') {
                closeModal();
            }
        });
    </script>
</body>
</html>