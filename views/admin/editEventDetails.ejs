<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Event - SLAMS</title>
    <link rel="stylesheet" href="/styles/frontpage.css">
    <link rel="stylesheet" href="/styles/adminDashboard.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        :root {
            --primary-color: #4A90E2;
            --secondary-color: #FFFFFF;
            --accent-color: #3A7BC8;
            --text-color: #333333;
            --light-gray: #F5F5F5;
        }

        body {
            background-color: var(--light-gray);
            color: var(--text-color);
        }

        .edit-event-form {
            background-color: var(--secondary-color);
            padding: 25px;
            border-radius: 10px;
            box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.1);
            max-width: 700px;
            margin: 0 auto;
        }

        .edit-event-form h2 {
            margin-bottom: 25px;
            color: var(--primary-color);
            font-size: 1.8rem;
            text-align: center;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-group label {
            display: block;
            margin-bottom: 10px;
            font-size: 16px;
            color: var(--primary-color);
            font-weight: 600;
        }

        .form-group input, 
        .form-group textarea, 
        .form-group select {
            width: 100%;
            padding: 12px;
            font-size: 15px;
            border: 1px solid #DDD;
            border-radius: 6px;
            transition: all 0.3s ease;
            background-color: var(--secondary-color);
        }

        .form-group input:focus, 
        .form-group textarea:focus, 
        .form-group select:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 3px rgba(74, 144, 226, 0.2);
            outline: none;
        }

        .form-group input[type="file"] {
            padding: 8px;
            background-color: transparent;
        }

        .form-group button {
            background-color: var(--primary-color);
            color: white;
            padding: 12px 24px;
            font-size: 16px;
            font-weight: 600;
            border-radius: 6px;
            border: none;
            cursor: pointer;
            width: 100%;
            transition: all 0.3s ease;
            margin-top: 10px;
        }

        .form-group button:hover {
            background-color: var(--accent-color);
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .back-btn {
            margin-top: 25px;
            display: inline-block;
            padding: 10px 20px;
            background-color: var(--primary-color);
            color: white;
            text-decoration: none;
            border-radius: 6px;
            font-size: 16px;
            transition: all 0.3s ease;
            text-align: center;
            width: 100%;
        }

        .back-btn:hover {
            background-color: var(--accent-color);
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .form-group label i {
            margin-right: 10px;
            color: var(--primary-color);
        }

        .sports-container {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 15px;
            margin-top: 15px;
            background-color: var(--light-gray);
            padding: 15px;
            border-radius: 8px;
        }

        .sport-option {
            display: flex;
            align-items: center;
            padding: 8px;
            background-color: var(--secondary-color);
            border-radius: 6px;
            transition: all 0.2s ease;
        }

        .sport-option:hover {
            background-color: #E6F0FA;
        }

        .sport-option input {
            margin-right: 10px;
            accent-color: var(--primary-color);
            transform: scale(1.2);
        }

        .sport-option label {
            margin: 0;
            color: var(--text-color);
            font-weight: normal;
            cursor: pointer;
        }

        .form-group textarea {
            min-height: 120px;
            resize: vertical;
            font-family: inherit;
            line-height: 1.5;
            padding: 12px;
        }

        .file-preview {
            margin-top: 10px;
            display: flex;
            align-items: center;
        }

        .file-preview img {
            max-width: 100px;
            max-height: 100px;
            margin-right: 15px;
            border-radius: 5px;
        }

        .file-preview a {
            color: var(--primary-color);
            text-decoration: none;
            display: flex;
            align-items: center;
        }

        .file-preview a:hover {
            text-decoration: underline;
        }

        .file-preview a i {
            margin-right: 5px;
        }

        .current-file {
            font-size: 14px;
            color: #666;
            margin-top: 5px;
        }
    </style>
</head>
<body>
    <main class="dashboard-container">
        <div class="edit-event-form">
            <h2>Update Event Details</h2>
            <form action="/admin/events/update/<%= event.id %>" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="title">
                        <i class="fas fa-heading"></i> Event Title:
                    </label>
                    <input type="text" id="title" name="title" value="<%= event.title %>" required>
                </div>

                <div class="form-group">
                    <label for="description">
                        <i class="fas fa-align-left"></i> Event Description:
                    </label>
                    <textarea id="description" name="description" rows="5" required><%= event.description %></textarea>
                </div>

                <div class="form-group">
                    <label>
                        <i class="fas fa-basketball-ball"></i> Sports Included:
                    </label>
                    <div class="sports-container">
                        <% 
                        const selectedSports = event.sports.split(',');
                        const sportsOptions = [
                            'basketball', 'volleyball', 'soccer', 'badminton', 
                            'sepak_takraw', 'table_tennis', 'chess', 
                            'athletics', 'taekwondo', 'arnis', 'gymnastic'
                        ];
                        %>
                        <% sportsOptions.forEach(sport => { %>
                            <div class="sport-option">
                                <input type="checkbox" id="<%= sport %>" name="sports[]" value="<%= sport %>" 
                                    <%= selectedSports.includes(sport) ? 'checked' : '' %>>
                                <label for="<%= sport %>"><%= sport.charAt(0).toUpperCase() + sport.slice(1).replace('_', ' ') %></label>
                            </div>
                        <% }); %>
                    </div>
                </div>

                <div class="form-group">
                    <label for="image">
                        <i class="fas fa-image"></i> Event Image:
                    </label>
                    <input type="file" id="image" name="image" accept="image/*">
                    <% if (event.image) { %>
                        <div class="file-preview">
                            <img src="/uploads/events/<%= event.image %>" alt="Current event image">
                            <span class="current-file">Current: <%= event.image %></span>
                        </div>
                    <% } %>
                </div>

                <div class="form-group">
                    <label for="date_schedule">
                        <i class="fas fa-calendar-alt"></i> Event Date:
                    </label>
                    <input type="datetime-local" id="date_schedule" name="date_schedule" 
                        value="<%= new Date(event.date_schedule).toISOString().slice(0, 16) %>" required>
                </div>

                <div class="form-group">
                    <label for="location">
                        <i class="fas fa-map-marker-alt"></i> Event Location:
                    </label>
                    <input type="text" id="location" name="location" value="<%= event.location %>" required>
                </div>

                <div class="form-group">
                    <label for="appointmentForm">
                        <i class="fas fa-file-pdf"></i> Appointment Form (PDF):
                    </label>
                    <input type="file" id="appointmentForm" name="appointmentForm" accept=".pdf">
                    <% if (event.appointmentForm) { %>
                        <div class="file-preview">
                            <a href="/uploads/admin_appointment_form/<%= event.appointmentForm %>" target="_blank">
                                <i class="fas fa-file-pdf"></i> View Current PDF
                            </a>
                            <span class="current-file">Current: <%= event.appointmentForm %></span>
                        </div>
                    <% } %>
                </div>

                <div class="form-group">
                    <button type="submit">
                        <i class="fas fa-save"></i> Update Event
                    </button>
                </div>
            </form>
            
            <a href="/admin/events/<%= event.id %>" class="back-btn">
                <i class="fas fa-arrow-left"></i> Back
            </a>
        </div>
    </main>

    <script>
        document.querySelector('form').addEventListener('submit', function(e) {
            // Validate at least one sport is selected
            const checkedSports = document.querySelectorAll('input[name="sports[]"]:checked');
            if (checkedSports.length === 0) {
                e.preventDefault();
                alert('Please select at least one sport');
                return false;
            }
            
            // Validate PDF file if a new one is selected
            const pdfFile = document.getElementById('appointmentForm').files[0];
            if (pdfFile) {
                const fileSize = pdfFile.size / 1024 / 1024; // in MB
                if (fileSize > 10) {
                    e.preventDefault();
                    alert('PDF file size should not exceed 10MB');
                    return false;
                }
            }
            
            // Show loading state
            const submitBtn = document.querySelector('button[type="submit"]');
            submitBtn.disabled = true;
            submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Updating Event...';
        });

        // Make the sports container items equal height
        function equalizeSportsHeight() {
            const sportsContainer = document.querySelector('.sports-container');
            if (sportsContainer) {
                const sportOptions = sportsContainer.querySelectorAll('.sport-option');
                let maxHeight = 0;
                
                sportOptions.forEach(option => {
                    option.style.height = 'auto';
                });
                
                sportOptions.forEach(option => {
                    if (option.offsetHeight > maxHeight) {
                        maxHeight = option.offsetHeight;
                    }
                });
                
                sportOptions.forEach(option => {
                    option.style.height = maxHeight + 'px';
                });
            }
        }

        // Run on load and resize
        window.addEventListener('load', equalizeSportsHeight);
        window.addEventListener('resize', equalizeSportsHeight);
    </script>
</body>
</html>