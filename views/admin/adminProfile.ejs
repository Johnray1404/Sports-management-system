<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Profile - SLAMS</title>
    <link rel="stylesheet" href="/styles/frontpage.css">
    <link rel="stylesheet" href="/styles/adminProfile.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        /* Keep existing sidebar and header styles */
        body {
            background: #f4f6f9;
            font-family: 'Segoe UI', sans-serif;
        }

        .modal-content {
            background-color: #fff;
            margin: 0 auto;
            padding: 30px 40px;
            border-radius: 15px;
            width: 350px;
            text-align: center;
            box-shadow: 0px 4px 20px rgba(0, 0, 0, 0.1);
            animation: scaleIn 0.3s ease-in-out;
        }

        @keyframes scaleIn {
            from { transform: scale(0.7); }
            to { transform: scale(1); }
        }

        /* Main Container Redesign */
        .main-container {
            padding: 2rem;
            margin-left: 240px;
            transition: margin-left 0.3s ease;
        }

        .profile-card {
            max-width: 600px;
            margin: 2rem auto;
            background: white;
            border-radius: 16px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
            overflow: hidden;
            position: relative;
        }

        .profile-header {
            background: linear-gradient(135deg, #4361ee 0%, #3a0ca3 100%);
            padding: 2.5rem 2rem;
            text-align: center;
            color: white;
        }

        .profile-avatar {
            width: 120px;
            height: 120px;
            border-radius: 50%;
            border: 4px solid rgba(255, 255, 255, 0.3);
            object-fit: cover;
            margin: 0 auto 1rem;
            display: block;
            background: #f8f9fa;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease;
        }

        .profile-avatar:hover {
            transform: scale(1.05);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
        }

        .profile-name {
            font-size: 1.5rem;
            font-weight: 600;
            margin: 0.5rem 0 0;
            color: white;
        }

        .profile-role {
            font-size: 0.9rem;
            opacity: 0.9;
            margin-bottom: 0;
        }

        .profile-body {
            padding: 2rem;
        }

        .section-title {
            font-size: 1.2rem;
            color: #2b2d42;
            margin-bottom: 1.5rem;
            padding-bottom: 0.5rem;
            border-bottom: 1px solid #eee;
            font-weight: 600;
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-label {
            display: block;
            margin-bottom: 0.5rem;
            font-weight: 500;
            color: #4a4a4a;
            font-size: 0.9rem;
        }

        .form-control {
            width: 100%;
            padding: 0.75rem 1rem;
            border: 1px solid #e0e0e0;
            border-radius: 8px;
            font-size: 0.95rem;
            transition: all 0.3s ease;
            background: #f9fafb;
        }

        .form-control:focus {
            outline: none;
            border-color: #4361ee;
            box-shadow: 0 0 0 3px rgba(67, 97, 238, 0.1);
            background: white;
        }

        input[readonly] {
            background-color: #f0f2f5;
            cursor: not-allowed;
        }

        /* File Upload Styling */
        .file-upload {
            margin-bottom: 2rem;
        }

        .file-upload-label {
            display: block;
            margin-bottom: 1rem;
            font-weight: 500;
            color: #4a4a4a;
        }

        .file-input-wrapper {
          position: relative; /* Add this */
          display: flex;
          border: 1px dashed #ccc;
          border-radius: 8px;
          padding: 1rem;
          align-items: center;
          justify-content: center;
          flex-direction: column;
          background: #f9fafb;
          transition: all 0.3s ease;
          cursor: pointer;
          min-height: 150px; /* Add minimum height */
      }

        .file-input-wrapper:hover {
            border-color: #4361ee;
            background: rgba(67, 97, 238, 0.03);
        }

        .file-input-wrapper.has-file {
            border-style: solid;
            border-color: #4cc9f0;
            background: rgba(76, 201, 240, 0.05);
        }

        .file-input-icon {
            font-size: 2rem;
            color: #4361ee;
            margin-bottom: 0.5rem;
        }

        .file-input-text {
            text-align: center;
            margin-bottom: 0.5rem;
            color: #6c757d;
        }

        .file-input-hint {
            font-size: 0.8rem;
            color: #adb5bd;
        }

        .file-name-display {
            font-weight: 500;
            color: #4361ee;
            margin-top: 0.5rem;
            word-break: break-all;
            text-align: center;
        }

        .file-input {
            position: absolute;
            width: 100%;
            height: 100%;
            top: 0;
            left: 0;
            opacity: 0;
            cursor: pointer;
            z-index: 10; /* Ensure it's above other elements */
        }

        /* Button Styles */
        .btn {
            padding: 0.75rem 1.5rem;
            border-radius: 8px;
            font-weight: 500;
            font-size: 0.95rem;
            cursor: pointer;
            transition: all 0.3s ease;
            border: none;
            display: inline-flex;
            align-items: center;
            justify-content: center;
        }

        .btn-primary {
            background: #4361ee;
            color: white;
            box-shadow: 0 4px 6px rgba(67, 97, 238, 0.1);
        }

        .btn-primary:hover {
            background: #3a56d4;
            transform: translateY(-2px);
            box-shadow: 0 6px 12px rgba(67, 97, 238, 0.15);
        }

        .btn-primary:active {
            transform: translateY(0);
        }

        .btn-icon {
            margin-right: 0.5rem;
        }

        .btn-group {
            display: flex;
            gap: 1rem;
            margin-top: 1rem;
        }

        /* Link Styles */
        .profile-link {
            color: #4361ee;
            text-decoration: none;
            font-weight: 500;
            display: inline-flex;
            align-items: center;
            transition: all 0.3s ease;
        }

        .profile-link:hover {
            color: #3a0ca3;
            text-decoration: underline;
        }

        .profile-link i {
            margin-right: 0.5rem;
        }

        /* Alert Styles */
        .alert {
            padding: 1rem;
            border-radius: 8px;
            margin: 1rem 0;
            font-size: 0.95rem;
            display: flex;
            align-items: center;
            animation: fadeIn 0.3s ease-out;
        }

        .alert-success {
            background-color: #d1fae5;
            color: #065f46;
            border: 1px solid #a7f3d0;
        }

        .alert-icon {
            margin-right: 0.75rem;
            font-size: 1.2rem;
        }

        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(-10px); }
            to { opacity: 1; transform: translateY(0); }
        }

        /* Divider */
        .divider {
            height: 1px;
            background: linear-gradient(to right, transparent, #e0e0e0, transparent);
            margin: 2rem 0;
            border: none;
        }

        /* Responsive Adjustments */
        @media (max-width: 768px) {
            .main-container {
                margin-left: 0;
                padding: 1rem;
            }
            
            .profile-card {
                border-radius: 0;
                box-shadow: none;
            }
        }
    </style>
</head>
<body>
    <!-- Sidebar Menu (unchanged) -->
    <div id="mySidebar" class="sidebar">
        <a href="/admin/home"><i class="fas fa-home"></i> Home</a>
        <a href="/admin/posts" class="active"><i class="fas fa-newspaper"></i> Posts</a>
        <a href="/admin/events"><i class="fas fa-calendar-alt"></i> Events</a>
        <a href="/admin/coach"><i class="fas fa-chalkboard-teacher"></i> Coordinator Request</a>
        
        <!-- Team dropdown section -->
        <a href="javascript:void(0);" class="team-dropdown-btn"><i class="fas fa-users-cog"></i> Teams</a>
        <div class="team-dropdown-content">
            <a href="/admin/team-request"><i class="fas fa-users"></i> Team Request</a>
            <a href="/admin/registered-team"><i class="fas fa-landmark"></i> All Team</a>
        </div>
        <a href="/admin/users"><i class="fas fa-users"></i> Players</a>
    </div>
    
    <!-- Sidebar toggle button (unchanged) -->
    <span class="sidebar-btn" onclick="toggleNav()">&#9776;</span>
    
    <!-- Header (unchanged) -->
    <header class="header">
        <div class="logo">
            <a href="/admin/home" style="text-decoration: none;">
                <img src="/images/cityYouth.jpg" alt="SLAMS Logo">
            </a>
        </div>
        <div class="user-profile">
            <% if (admin && admin.profilePic) { %>
            <img src="<%= admin.profilePic %>" 
                alt="Admin Profile" 
                style="width: 35px; height: 35px; border-radius: 50%; border: 2px solid #007bff; object-fit: cover;">
            <% } else { %>
            <i class="fas fa-user-shield"></i>
            <% } %>

            <div class="dropdown-content">
                <a href="/admin/adminProfile">
                    <i class="fas fa-cogs" style="margin-right: 8px;"></i> Admin
                </a>
                <a href="javascript:void(0);" class="logout-btn" onclick="showLogoutModal()">
                    <i class="fas fa-sign-out-alt" style="margin-right: 8px;"></i> Log Out
                </a>
            </div>
        </div>
    </header>
    
    <!-- Enhanced Main Container -->
    <div class="main-container">
        <div class="profile-card">
            <div class="profile-header">
                <% if (admin.profilePic) { %>
                    <img src="<%= admin.profilePic %>" alt="Profile Picture" class="profile-avatar" id="profileImage">
                <% } else { %>
                    <img src="/images/user icon.jpg" alt="Default Profile Picture" class="profile-avatar" id="profileImage">
                <% } %>
                <h1 class="profile-name"><%= admin.name || "Administrator" %></h1>
                <p class="profile-role">System Administrator</p>
            </div>

            <div class="profile-body">
                <% if (success) { %>
                    <div id="successMsg" class="alert alert-success">
                        <i class="fas fa-check-circle alert-icon"></i>
                        Profile updated successfully!
                    </div>
                <% } %>

                <h3 class="section-title">Profile Picture</h3>
                <form action="/admin/adminProfile" method="POST" enctype="multipart/form-data">
                    <div class="file-upload">
                        <div class="file-input-wrapper" id="fileDropArea">
                            <i class="fas fa-cloud-upload-alt file-input-icon"></i>
                            <div class="file-input-text">Drag & drop your photo here or click to browse</div>
                            <div class="file-input-hint">JPG, PNG (Max 5MB)</div>
                            <div class="file-name-display" id="fileNameDisplay">No file selected</div>
                            <input type="file" name="profilePic" id="profilePicInput" accept="image/*" class="file-input" required>
                        </div>
                    </div>

                    <div class="btn-group">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-upload btn-icon"></i> Update Profile Picture
                        </button>
                    </div>
                </form>

                <hr class="divider">

                <h3 class="section-title">Account Information</h3>
                <div class="form-group">
                    <label for="username" class="form-label">Username</label>
                    <input type="text" id="username" class="form-control" value="<%= admin.username %>" readonly>
                </div>

                <a href="/admin/changePassword" class="profile-link">
                    <i class="fas fa-key"></i> Change Password
                </a>
            </div>
        </div>
    </div>

    <!-- Modal for logout confirmation (unchanged) -->
    <div id="logoutModal" class="modal">
        <div class="modal-content">
            <h3>Are you sure you want to log out?</h3>
            <button id="confirmLogout" class="confirm-btn">Yes</button>
            <button id="cancelLogout" class="cancel-btn">No</button>
        </div>
    </div>

    <script>
        // Keep existing sidebar toggle functionality
        let isSidebarOpen = false; 
        function toggleNav() {
            const sidebar = document.getElementById("mySidebar");
            const content = document.querySelector(".dashboard-container");
            const sidebarBtn = document.querySelector(".sidebar-btn");

            if (isSidebarOpen) {
                sidebar.style.left = "-240px";  
                document.body.classList.remove("sidebar-open");
                sidebarBtn.innerHTML = "&#9776;";
            } else {
                sidebar.style.left = "0";
                document.body.classList.add("sidebar-open");
                sidebarBtn.innerHTML = "&#9776;";
            }

            isSidebarOpen = !isSidebarOpen;
        }

       // Enhanced file input functionality
        const fileInput = document.getElementById('profilePicInput');
        const fileDropArea = document.getElementById('fileDropArea');
        const fileNameDisplay = document.getElementById('fileNameDisplay');
        const profileImage = document.getElementById('profileImage');

        // Handle file selection
        fileInput.addEventListener('change', function() {
            if (this.files && this.files.length > 0) {
                const file = this.files[0];
                fileNameDisplay.textContent = file.name;
                fileDropArea.classList.add('has-file');
                
                // Preview the image
                const reader = new FileReader();
                reader.onload = function(e) {
                    profileImage.src = e.target.result;
                }
                reader.readAsDataURL(file);
            } else {
                fileNameDisplay.textContent = 'No file selected';
                fileDropArea.classList.remove('has-file');
            }
        });

        // Make the entire drop area clickable
        fileDropArea.addEventListener('click', function(e) {
            // Prevent triggering the input twice if clicking directly on it
            if (e.target !== fileInput) {
                fileInput.click();
            }
        });

        // Drag and drop functionality
        ['dragenter', 'dragover', 'dragleave', 'drop'].forEach(eventName => {
            fileDropArea.addEventListener(eventName, preventDefaults, false);
        });

        function preventDefaults(e) {
            e.preventDefault();
            e.stopPropagation();
        }

        ['dragenter', 'dragover'].forEach(eventName => {
            fileDropArea.addEventListener(eventName, highlight, false);
        });

        ['dragleave', 'drop'].forEach(eventName => {
            fileDropArea.addEventListener(eventName, unhighlight, false);
        });

        function highlight() {
            fileDropArea.classList.add('highlight');
        }

        function unhighlight() {
            fileDropArea.classList.remove('highlight');
        }

        fileDropArea.addEventListener('drop', handleDrop, false);

        function handleDrop(e) {
            const dt = e.dataTransfer;
            const files = dt.files;
            fileInput.files = files;
            
            // Trigger change event
            const event = new Event('change');
            fileInput.dispatchEvent(event);
        }

        // Show success message if it exists and hide after 3 seconds
        const successMsg = document.getElementById('successMsg');
        if (successMsg) {
            successMsg.style.display = 'flex';
            setTimeout(() => {
                successMsg.style.opacity = '0';
                setTimeout(() => {
                    successMsg.style.display = 'none';
                }, 300);
            }, 3000);
        }

        // Keep existing logout modal functionality
        function showLogoutModal() {
            document.getElementById('logoutModal').style.display = 'block';
        }
        function hideLogoutModal() {
            document.getElementById('logoutModal').style.display = 'none';
        }
        document.getElementById('confirmLogout').addEventListener('click', function() {
            window.location.href = '/admin/logout';  
        });
        document.getElementById('cancelLogout').addEventListener('click', function() {
            hideLogoutModal(); 
        });

        // Keep existing team dropdown functionality
        const teamDropdownBtn = document.querySelector('.team-dropdown-btn');
        const teamDropdownContent = document.querySelector('.team-dropdown-content');

        if (teamDropdownBtn && teamDropdownContent) {
            teamDropdownBtn.addEventListener('click', function() {
                teamDropdownBtn.classList.toggle('active');
                if (teamDropdownContent.style.display === "block") {
                    teamDropdownContent.style.display = "none";
                } else {
                    teamDropdownContent.style.display = "block";
                }
            });
        }
    </script>
</body>
</html>