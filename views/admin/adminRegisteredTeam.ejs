<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Registered Team - SLAMS</title>
    <link rel="stylesheet" href="/styles/frontpage.css">
    <link rel="stylesheet" href="/styles/adminDashboard.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        :root {
            --primary-color: #2c7be5;
            --secondary-color: #6e84a3;
            --light-gray: #f8f9fa;
            --medium-gray: #e9ecef;
            --dark-gray: #495057;
            --white: #ffffff;
            --shadow: 0 4px 12px rgba(0, 0, 0, 0.08);
            --border-radius: 10px;
            --transition: all 0.3s ease;
        }

        .dashboard-container {
            padding: 20px;
            background-color: #f9f9f9;
            min-height: 100vh;
        }

        .card {
            background: #ffffff;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.06);
            padding: 25px 30px;
            margin-bottom: 30px;
        }

        .section-title {
            font-size: 26px;
            font-weight: 700;
            color: #2c3e50;
            margin-bottom: 20px;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .error-message {
            background-color: #f8d7da;
            color: #721c24;
            padding: 15px;
            margin-bottom: 20px;
            border-radius: 5px;
        }

        /* Organization List Styles */
        .organization-list {
            display: flex;
            flex-direction: column;
            gap: 12px;
            margin-top: 20px;
        }

        .organization-item {
            display: flex;
            align-items: center;
            background: var(--white);
            border-radius: var(--border-radius);
            box-shadow: var(--shadow);
            padding: 15px 20px;
            transition: var(--transition);
        }

        .organization-item:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 16px rgba(0, 0, 0, 0.1);
        }

        .organization-logo-container {
            width: 50px;
            height: 50px;
            flex-shrink: 0;
            background-color: var(--light-gray);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            overflow: hidden;
            margin-right: 20px;
            border: 2px solid var(--medium-gray);
        }

        .organization-logo {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .default-logo {
            font-size: 20px;
            color: var(--secondary-color);
        }

        .organization-info {
            flex-grow: 1;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .organization-name {
            font-size: 16px;
            font-weight: 600;
            color: var(--primary-color);
        }

        .organization-date {
            font-size: 14px;
            color: var(--secondary-color);
            display: flex;
            align-items: center;
        }

        .organization-date i {
            margin-right: 8px;
            color: var(--primary-color);
        }
        .organization-details {
            display: flex;
            gap: 20px;
            align-items: center;
        }

        .organization-event {
            font-size: 14px;
            color: var(--secondary-color);
            display: flex;
            align-items: center;
            background: var(--light-gray);
            padding: 5px 10px;
            border-radius: 5px;
        }

        .organization-event i {
            margin-right: 8px;
            color: var(--primary-color);
        }

        .no-data {
            text-align: center;
            font-style: italic;
            color: #888;
            padding: 40px;
        }

        @media (max-width: 768px) {
            .organization-item {
                padding: 12px 15px;
            }
            
            .organization-logo-container {
                width: 40px;
                height: 40px;
                margin-right: 15px;
            }
            
            .organization-name {
                font-size: 15px;
            }
            
            .organization-date {
                font-size: 13px;
            }
        }

        /* Filter Styles */
        .filter-container {
            display: flex;
            justify-content: flex-end;
            margin-bottom: 20px;
        }

        .filter-dropdown {
            position: relative;
            display: inline-block;
        }

        .filter-btn {
            background-color: var(--white);
            border: 1px solid var(--medium-gray);
            border-radius: var(--border-radius);
            padding: 8px 15px;
            cursor: pointer;
            display: flex;
            align-items: center;
            gap: 8px;
            transition: var(--transition);
        }

        .filter-btn:hover {
            background-color: var(--light-gray);
        }

        .filter-dropdown-content {
            display: none;
            position: absolute;
            right: 0;
            background-color: var(--white);
            min-width: 200px;
            box-shadow: var(--shadow);
            border-radius: var(--border-radius);
            z-index: 1;
            padding: 10px 0;
        }

        .filter-dropdown-content a {
            color: var(--dark-gray);
            padding: 8px 16px;
            text-decoration: none;
            display: block;
            transition: var(--transition);
        }

        .filter-dropdown-content a:hover {
            background-color: var(--light-gray);
            color: var(--primary-color);
        }

        .filter-dropdown:hover .filter-dropdown-content {
            display: block;
        }

        .filter-dropdown:hover .filter-btn {
            background-color: var(--light-gray);
        }
    </style>
</head>
<body>
    <!-- Sidebar Menu -->
    <div id="mySidebar" class="sidebar">
        <a href="/admin/home"><i class="fas fa-home"></i> Home</a>
        <a href="/admin/posts"><i class="fas fa-newspaper"></i> Posts</a>
        <a href="/admin/events"><i class="fas fa-calendar-alt"></i> Events</a>
        <a href="/admin/coach"><i class="fas fa-chalkboard-teacher"></i>Coordinator Request</a>
        
        <!-- Team dropdown section -->
            <a href="javascript:void(0);" class="team-dropdown-btn"><i class="fas fa-users-cog"></i> Teams</a>
            <div class="team-dropdown-content">
                <a href="/admin/team-request"><i class="fas fa-users"></i> Team Request</a>
            <a href="/admin/registered-team" class="active"><i class="fas fa-users"></i> All Team</a>
        </div>
        <a href="/admin/users"><i class="fas fa-users"></i> Players</a>
    </div>

    <!-- Sidebar toggle button -->
    <span class="sidebar-btn" onclick="toggleNav()">&#9776;</span>

    <header class="header">
        <div class="logo">
            <a href="/admin/home" style="text-decoration: none;">
                <img src="/images/cityYouth.jpg" alt="SLAMS Logo">
            </a>
        </div>

        <div class="user-profile">
            <% if (admin && admin.profilePic) { %>
                <img src="<%= admin.profilePic %>" 
                    alt="Admin Profile" 
                    style="width: 35px; height: 35px; border-radius: 50%; border: 2px solid #007bff; object-fit: cover;">
            <% } else { %>
                <i class="fas fa-user-shield"></i>
            <% } %>

            <div class="dropdown-content">
                <a href="/admin/adminProfile">
                    <i class="fas fa-cogs" style="margin-right: 8px;"></i> Admin
                </a>
                <a href="javascript:void(0);" class="logout-btn" onclick="showLogoutModal()">
                    <i class="fas fa-sign-out-alt" style="margin-right: 8px;"></i> Log Out
                </a>
            </div>
        </div>
    </header>

    <main class="dashboard-container">
        <div class="card">
            <h2 class="section-title"><i class="fas fa-users"></i> All Teams</h2>

            <!-- Display messages if any -->
            <% if (messages && messages.error) { %>
                <div class="error-message"><%= messages.error %></div>
            <% } %>

            <!-- Filter Dropdown -->
            <div class="filter-container">
                <div class="filter-dropdown">
                    <button class="filter-btn">
                        <i class="fas fa-filter"></i>
                        Filter by Event
                    </button>
                    <div class="filter-dropdown-content">
                        <a href="#" class="filter-option" data-event="all">All Teams</a>
                        <% events.forEach(function(event) { %>
                            <a href="#" class="filter-option" data-event="<%= event.id %>"><%= event.title %></a>
                        <% }); %>
                    </div>
                </div>
            </div>

            <!-- Organization List -->
            <div class="organization-list">
                <% if (teams && teams.length > 0) { %>
                    <% teams.forEach(function(team) { %>
                        <div class="organization-item" data-event="<%= team.event_id || 'none' %>">
                            <div class="organization-logo-container">
                                <% if (team.teamProfile) { %>
                                    <img src="<%= team.teamProfile %>" alt="<%= team.teamName %> Logo" class="organization-logo">
                                <% } else { %>
                                    <i class="fas fa-landmark default-logo"></i>
                                <% } %>
                            </div>
                            <div class="organization-info">
                                <h3 class="organization-name"><%= team.teamName %></h3>
                                <div class="organization-details">
                                    <div class="organization-event">
                                        <i class="fas fa-trophy"></i>
                                        <span><%= team.event_title %></span>
                                    </div>
                                    <div class="organization-date">
                                        <i class="fas fa-calendar"></i>
                                        <span><%= team.created_at %></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                <% } else { %>
                    <div class="no-data">
                        <i class="fas fa-building fa-3x" style="margin-bottom: 15px; color: #ccc;"></i>
                        <h3>No registered organizations found</h3>
                        <p>There are currently no confirmed organizations in the system.</p>
                    </div>
                <% } %>
            </div>
        </div>
    </main>

    <!-- Modal for logout confirmation -->
    <div id="logoutModal" class="modal">
        <div class="modal-content">
            <h3>Are you sure you want to log out?</h3>
            <button id="confirmLogout" class="confirm-btn">Yes</button>
            <button id="cancelLogout" class="cancel-btn">No</button>
        </div>
    </div>

    <script>
        let isSidebarOpen = false;

        function toggleNav() {
            const sidebar = document.getElementById("mySidebar");
            const content = document.querySelector(".dashboard-container");
            const sidebarBtn = document.querySelector(".sidebar-btn");

            if (isSidebarOpen) {
                sidebar.style.left = "-240px";
                content.style.marginLeft = "0";
                sidebarBtn.innerHTML = "&#9776;";
            } else {
                sidebar.style.left = "0";
                content.style.marginLeft = "240px";
                sidebarBtn.innerHTML = "&#9776;";
            }
            isSidebarOpen = !isSidebarOpen;
        }

        // Toggle the team dropdown
        const teamDropdownBtn = document.querySelector('.team-dropdown-btn');
        const teamDropdownContent = document.querySelector('.team-dropdown-content');

        teamDropdownBtn.addEventListener('click', function() {
            // Toggle the active class on the button
            teamDropdownBtn.classList.toggle('active');

            // Show or hide the dropdown content
            if (teamDropdownContent.style.display === "block") {
                teamDropdownContent.style.display = "none";
            } else {
                teamDropdownContent.style.display = "block";
            }
        });

        // Show the logout confirmation modal
        function showLogoutModal() {
            document.getElementById('logoutModal').style.display = 'block';
        }

        function hideLogoutModal() {
            document.getElementById('logoutModal').style.display = 'none';
        }

        document.getElementById('confirmLogout').addEventListener('click', function() {
            window.location.href = '/admin/logout';  
        });

        document.getElementById('cancelLogout').addEventListener('click', function() {
            hideLogoutModal(); 
        });
        // Filter organizations by event
document.addEventListener('DOMContentLoaded', function() {
    const filterOptions = document.querySelectorAll('.filter-option');
    const organizationItems = document.querySelectorAll('.organization-item');
    
    filterOptions.forEach(option => {
        option.addEventListener('click', function(e) {
            e.preventDefault();
            const eventId = this.getAttribute('data-event');
            
            // Update the filter button text
            const filterBtn = document.querySelector('.filter-btn');
            if (eventId === 'all') {
                filterBtn.innerHTML = '<i class="fas fa-filter"></i> Filter by Event';
            } else {
                filterBtn.innerHTML = `<i class="fas fa-filter"></i> ${this.textContent}`;
            }
            
            // Filter the organizations
            organizationItems.forEach(item => {
                const itemEventId = item.getAttribute('data-event') || 'none';
                
                if (eventId === 'all' || itemEventId === eventId) {
                    item.style.display = 'flex';
                } else {
                    item.style.display = 'none';
                }
            });
        });
    });
});
    </script>
</body>
</html>